    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Deploy Lambda",
            "program": "${workspaceFolder}/bin/serverless-cd.js",
            "outFiles": [
                "${workspaceFolder}/bin/**/*.js"
            ],
            "args": [
                "lambda",
                "deploy",
                "BookShelf-HelloWorld",
                "--to-alias",
                "dev"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build",
            "env": {
                "AWS_REGION": "us-east-1",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Set Stack Method Function",
            "program": "${workspaceFolder}/bin/serverless-cd.js",
            "outFiles": [
                "${workspaceFolder}/bin/**/*.js"
            ],
            "args": [
                "cloudformation",
                "apigateway",
                "set-method-function",
                "--stack-name",
                "BookShelf",
                "--http-method",
                "GET",
                "--resource",
                "/users/{userId}/books",
                "--function-name",
                "BookShelf-UserBooks",
                "--function-alias",
                "dev",
                "--alias-stage-variable",
                "fnAlias"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build",
            "env": {
                "AWS_REGION": "us-east-1"
            }
        }
    ]
}
